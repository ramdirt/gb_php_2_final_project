{% extends 'layouts/main.twig' %}
{% block content %}

<h2>Товар</h2>

<div>
    <img width="300" src="/public/assets/img/big/{{product.img}}" alt="">
    <h3>{{product.title}}</h3>
    <p>{{product.description}}</p>
    <p>{{product.price}}</p>
    <form action="/basket/add?id={{product.id}}" method="post">
        <button type="submit">Купить</button>
    </form>
</div>
{% endblock %}