{% extends 'layouts/main.twig' %}
{% block content %}

<h2>Товар</h2>

<div>
    <img width="300" src="/public/assets/img/big/{{product.img}}" alt="">
    <h3>{{product.title}}</h3>
    <p>{{product.description}}</p>
    <p>{{product.price}}</p>
    <button data-id="{{product.id}}" class="btn-add-basket">Добавить в корзину</button>
</div>
{% endblock %}