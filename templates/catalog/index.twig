{% extends 'layouts/main.twig' %}
{% block content %}

    <h2>Каталог</h2>
    
    {% for product in catalog %}
        <div>
            <img width="200" src="/public/assets/img/big/{{product.img}}" alt="">
            <h3><a href="/product/index/?id={{product.id}}">{{product.title}}</a></h3>
            <p>price: {{product.price}}</p>
            <button data-id="{{product.id}}" class="btn-add-basket">Добавить в корзину</button>
        </div>
    {% endfor %}

<a href="./?c=catalog&a=index&page=<?= $page ?>">Еще</a>
{% endblock %}